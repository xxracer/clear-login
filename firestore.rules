
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    // Rules for the 'companies' collection
    // This allows any authenticated admin user to manage company settings.
    match /companies/{companyId} {
      allow read, write: if isSignedIn();
    }

    // Rules for the 'candidates' collection and their subcollections
    // This allows any authenticated admin user to manage all candidate data.
    match /candidates/{candidateId}/{documents=**} {
      allow read, write: if isSignedIn();
    }
    
    // Fallback rule for user-specific data, if any.
    match /users/{userId}/{documents=**} {
      allow read, write: if request.auth.uid == userId;
    }
  }
}
