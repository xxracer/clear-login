rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permite que cualquiera suba archivos (ej. un candidato subiendo su CV o licencia).
    // Las lecturas, sin embargo, est√°n restringidas a usuarios autenticados para proteger la privacidad.
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if true;
    }
  }
}
