
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permite que cualquiera suba archivos (ej. un candidato subiendo su CV).
    // Las lecturas, sin embargo, est√°n restringidas.
    // Esto protege los documentos para que solo los administradores autenticados puedan verlos.
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if true;
    }
  }
}
